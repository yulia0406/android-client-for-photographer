<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_detailphotosession"
    >

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/laila_light"
        android:text="Название"
        android:textAllCaps="true"
        android:textSize="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/laila_light"
        android:text="дата"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textDateCr"
        app:layout_constraintTop_toTopOf="@+id/textDost" />

    <TextView
        android:id="@+id/textDost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:fontFamily="@font/laila_light"
        android:text="Доступ для:"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textName"
        app:layout_constraintTop_toTopOf="@+id/textName" />


    <TextView
        android:id="@+id/textDateCr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/laila_light"
        android:text="Создан:"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/textDate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textName"
        app:layout_constraintTop_toTopOf="@+id/textDost" />


    <TextView
        android:id="@+id/textNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/laila_light"
        android:text="Фото для обработки:"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/textDate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textName"
        app:layout_constraintTop_toTopOf="@+id/textDateCr" />

    <TextView
        android:id="@+id/Num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="12dp"
        android:fontFamily="@font/laila_light"
        android:text="кол-во"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/textNum"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintTop_toTopOf="@+id/textDateCr" />

    <EditText
        android:id="@+id/EditNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:fontFamily="@font/laila_light"
        android:text="кол-во"
        android:textSize="16dp"
        android:inputType="number"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/textNum"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintTop_toTopOf="@+id/textDateCr" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/laila_medium"
        android:layout_marginRight="20dp"
        android:text="Логин"
        app:layout_constraintEnd_toEndOf="@+id/imageButton2"
        app:layout_constraintHorizontal_bias="0.773"
        app:layout_constraintStart_toEndOf="@+id/textDost"
        app:layout_constraintTop_toTopOf="@+id/textName" />

    <EditText
        android:id="@+id/editLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:fontFamily="@font/laila_medium"
        android:text="Логин"
        android:textSize="14sp"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/button6"

        app:layout_constraintStart_toEndOf="@+id/textDost"
        app:layout_constraintTop_toTopOf="@+id/textName" />



    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="54dp"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@color/white"

        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textName"
        app:srcCompat="@drawable/baseline_edit_24" />

    <ImageButton
        android:id="@+id/imageButtonNum"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="90dp"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Num"
        app:layout_constraintTop_toTopOf="@+id/textDateCr"
        app:srcCompat="@drawable/baseline_edit_24" />


    <Button
        android:id="@+id/buttonOKNum"
        android:layout_width="64dp"
        android:layout_height="33dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/black"
        android:text="OK"
        android:textSize="10dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/EditNum"
        app:layout_constraintTop_toTopOf="@+id/textDateCr" />


    <Button
        android:id="@+id/button5"
        android:layout_width="364dp"
        android:layout_height="39dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/white"
        android:text="+ ДОБАВИТЬ ФОТО"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/checkBox" />

    <Button
        android:id="@+id/buttonProcess"
        android:layout_width="364dp"
        android:layout_height="39dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/white"
        android:text="+ ДОБАВИТЬ ОБРАБОТАННОЕ ФОТО"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button5" />

    <Button
        android:id="@+id/buttonEnd"
        android:layout_width="364dp"
        android:layout_height="39dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/white"
        android:text="ОТМЕТИТЬ КАК ЗАВЕРШЕННУЮ"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonProcess" />


    <Button
        android:id="@+id/button6"
        android:layout_width="64dp"
        android:layout_height="33dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="54dp"
        android:backgroundTint="@color/black"
        android:text="OK"
        android:textSize="10dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/editLogin"
        app:layout_constraintTop_toTopOf="@+id/textName" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"


        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="@+id/textName"
        app:layout_constraintTop_toTopOf="@+id/buttonEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="На обработку"
        android:layout_marginTop="20dp"

        app:layout_constraintStart_toStartOf="@+id/textNum"
        app:layout_constraintTop_toTopOf="@+id/textNum"
        />

    <!-- <ImageView
         android:id="@+id/imageView3"
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:layout_marginStart="44dp"
         android:layout_marginTop="64dp"
         android:src="@mipmap/ic_photosession"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="@+id/button5"/>-->
</androidx.constraintlayout.widget.ConstraintLayout>