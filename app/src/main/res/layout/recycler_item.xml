        <LinearLayout

            android:layout_width="123dp"
            android:layout_height="170dp"
            android:layout_marginLeft="0dp"

            android:id="@+id/recCard"
            android:orientation="vertical"
            android:background="@drawable/image"
            android:weightSum="8.0">

            <FrameLayout
                android:layout_width="123dp"
                android:layout_height="123dp">
            <ImageView
                android:id="@+id/recImage"
                android:layout_width="123dp"
                android:layout_height="123dp"
                android:layout_weight="6.5"
                android:src="@mipmap/ic_photosession"

                />
                <ImageButton
                    android:id="@+id/delete"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@color/white"
                    android:src = "@drawable/baseline_delete_forever_24"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="0dp">

                </ImageButton>

                <ImageView
                    android:id="@+id/imageViewOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"

                    app:srcCompat="@drawable/baseline_thumb_up_off_alt_24" />

                <ImageView
                    android:id="@+id/imageViewOn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:srcCompat="@drawable/baseline_thumb_up_24" />
            </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:weightSum="2"

                    android:layout_weight="7"
                    >



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Название"
                            android:textSize="12sp"
                            android:textAlignment="center"
                            android:layout_marginRight="3dp"
                            android:maxLines="4"
                            android:textColor="@color/black"
                            android:id="@+id/recTitle"/>







                </LinearLayout>
        </LinearLayout>
<!--    </androidx.cardview.widget.CardView>-->
</LinearLayout>