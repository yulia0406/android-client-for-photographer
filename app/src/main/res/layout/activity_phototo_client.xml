<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.PhotoActivityClient">

    <TextView
        android:id="@+id/detailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:text="Titles"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:background="#F4F4F4"/>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="670dp">
    <ImageView
        android:id="@+id/detailImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="matrix"

        android:adjustViewBounds="true"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="2dp"

        android:src="@mipmap/ic_photosession" />

    <ImageView
        android:id="@+id/detailImageProcess"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="matrix"
        android:visibility="gone"
        android:adjustViewBounds="true"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="2dp"

        android:src="@mipmap/ic_photosession" />


    <ImageButton
        android:id="@+id/forward"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="#70000000"
        android:layout_gravity="end"
        android:src = "@drawable/baseline_arrow_forward_ios_24_white"
        android:layout_marginVertical="330dp"
        android:layout_marginTop="0dp">

    </ImageButton>
    <ImageButton
        android:id="@+id/backward"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="#70000000"
        android:layout_gravity="start"
        android:src = "@drawable/baseline_arrow_back_ios_24_white"
        android:layout_marginVertical="330dp"
        android:layout_marginTop="0dp">

    </ImageButton>
</FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left">

    <ImageButton
        android:id="@+id/imageButtonSave"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:background="@color/white"
        app:srcCompat="@drawable/baseline_download_24" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginLeft="130dp"
            android:background="@color/white"
            app:srcCompat="@drawable/baseline_comment_24" />


    </LinearLayout>


</LinearLayout>